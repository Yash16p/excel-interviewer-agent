# AI Interview Simulation Agent - Environment Configuration
# Copy this file to .env and replace with your actual values

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration - MongoDB Atlas
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE_NAME=interview_agent

# Audio/Video Configuration
WHISPER_MODEL_SIZE=base
SAMPLE_RATE=16000
CHUNK_SIZE=1024

# Application Configuration
STREAMLIT_PORT=8501
FASTAPI_PORT=8000
DEBUG_MODE=True

# File Storage
UPLOAD_FOLDER=./uploads
REPORTS_FOLDER=./reports
MAX_FILE_SIZE=10485760

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Proctoring Configuration
FACE_DETECTION_CONFIDENCE=0.5
GAZE_TRACKING_ENABLED=True
TAB_MONITORING_ENABLED=True

# LLM Configuration
DEFAULT_MODEL=gpt-4o-mini
MAX_TOKENS=2048
TEMPERATURE=0.7